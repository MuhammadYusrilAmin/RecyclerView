<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetailWisataActivity">

    <TextView
        android:id="@+id/Wisata"
        android:text="Wisata "
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Kota"
        android:layout_below="@+id/Wisata"
        android:text="Kot "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/separator"
        android:layout_toRightOf="@id/Kota"
        android:layout_below="@id/Wisata"
        android:text="|"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Provinsi"
        android:layout_below="@id/Wisata"
        android:layout_toRightOf="@id/separator"
        android:text="Provinsi "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/deskripsiWisata"
        android:layout_below="@id/Provinsi"
        android:text="Deskripsi Wisata "
        android:layout_marginTop="5dp"
        android:textColor="#FF000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>